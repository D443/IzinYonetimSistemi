<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mehmet.izinyonetimsistemi.AdminProjeEkle"
    android:background="@drawable/background"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Proje Adı"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_proje_adi"
        android:ems="10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignLeft="@+id/spn_proje_yonetici"
        android:layout_alignStart="@+id/spn_proje_yonetici" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Proje Yöneticisi"
        android:id="@+id/txt_proje_yonetici"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginTop="70dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spn_proje_yonetici"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:ems="10"
        android:layout_alignBottom="@+id/txt_proje_yonetici"
        android:layout_toRightOf="@+id/txt_proje_yonetici"
        android:layout_toEndOf="@+id/txt_proje_yonetici" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Departman Adı"
        android:id="@+id/txt_departman_adi"
        android:layout_below="@+id/txt_proje_yonetici"
        android:layout_alignLeft="@+id/txt_proje_yonetici"
        android:layout_alignStart="@+id/txt_proje_yonetici"
        android:layout_marginTop="97dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spn_departman_adi"
        android:layout_alignBottom="@+id/txt_departman_adi"
        android:layout_alignLeft="@+id/spn_proje_yonetici"
        android:layout_alignStart="@+id/spn_proje_yonetici" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ekle"
        android:id="@+id/btn_proje_ekle"
        android:layout_below="@+id/txt_departman_adi"
        android:layout_alignLeft="@+id/spn_departman_adi"
        android:layout_alignStart="@+id/spn_departman_adi"
        android:layout_marginTop="54dp" />

</RelativeLayout>
